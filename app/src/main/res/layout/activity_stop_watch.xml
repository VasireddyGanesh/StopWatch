<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211044"
    tools:context=".stop_watch">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/bgcircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/circle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="45dp"
        />

    <ImageView
        android:layout_width="390dp"
        android:layout_height="360dp"
        android:src="@drawable/icanchor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:id="@+id/stick"
        />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/startwatch"
        android:id="@+id/chronometer"
        android:fontFamily="@font/chunk_five_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circle"
        android:textColor="#FFF"
        android:layout_marginBottom="12dp"
        android:textSize="42sp"
        />


    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="Start Now"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stopwatch"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:paddingRight="62dp"
        android:paddingLeft="62dp"
        android:paddingBottom="8dp"
        android:id="@+id/startwatch"
        android:textAllCaps="false"
        android:fontFamily="@font/josefinsans_bold"
        android:textColor="#FFF"
        />



    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/stopbtn"
        android:text="Stop"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="45dp"
        android:paddingRight="62dp"
        android:paddingLeft="62dp"
        android:paddingBottom="8dp"
        android:id="@+id/stopwatch"
        android:textAllCaps="false"
        android:fontFamily="@font/josefinsans_bold"
        android:textColor="#FFF"
        />





</androidx.constraintlayout.widget.ConstraintLayout>